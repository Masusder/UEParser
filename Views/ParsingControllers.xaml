<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="https://github.com/projektanker/icons.avalonia"
             mc:Ignorable="d"
             x:Class="UEParser.Views.ParsingControllers"
             xmlns:views="clr-namespace:UEParser.Views"
             xmlns:vm="clr-namespace:UEParser.ViewModels"
             x:DataType="vm:ParsingControllersModel">
  <StackPanel
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
    <Button Name="MainController"
            Command="{Binding ParseEverythingCommand}"
            Margin="5"
            Cursor="Hand">
      <StackPanel Orientation="Vertical">
        <Image Source="avares://UEParser/Resources/iconHelp_DBDlogo.png" Width="64" Height="64" />
        <TextBlock>
          Everything
        </TextBlock>
      </StackPanel>
    </Button>
    <Button Name="RiftsController"
            Command="{Binding ParseRiftsCommand}"
            Cursor="Hand"
            Margin="5">
      <StackPanel Orientation="Vertical">
        <Image Source="avares://UEParser/Resources/iconHelp_archivesRewards.png" Width="64" Height="64" />
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">
          Rifts
        </TextBlock>
      </StackPanel>
    </Button>
    <Button Name="CharactersController"
            Command="{Binding ParseCharactersCommand}"
            Cursor="Hand"
            Margin="5">
      <StackPanel Orientation="Vertical">
        <Image Source="avares://UEParser/Resources/help_levelIcon_survivor.png" Width="64" Height="64" />
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">Characters</TextBlock>
      </StackPanel>
    </Button>
  </StackPanel>
</UserControl>
