<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="UEParser.Views.NeteaseVersionSelectionDialog"
        WindowStartupLocation="CenterOwner"
        Title="UEParser - Select NetEase Version" 
        Width="300"
        Height="150"
        Icon="/Resources/UEParserLogo.ico">
    <StackPanel Margin="10">
        <TextBlock HorizontalAlignment="Center" Text="Select Version:" Margin="0,0,0,10" />
        <ComboBox HorizontalAlignment="Center" Name="VersionComboBox" Width="200" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Name="OkButton" Content="OK" Width="75" Margin="5,0,0,0" />
            <Button Name="CancelButton" Content="Cancel" Width="75" Margin="5,0,0,0" />
        </StackPanel>
    </StackPanel>
</Window>